<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_14_x</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="main_btn">
        <item name="android:layout_width">@dimen/dp_48_y</item>
        <item name="android:layout_height">@dimen/dp_32_y</item>
        <item name="android:textSize">@dimen/dp_13_x</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/main_btn</item>
    </style>

    <style name="btn_focus">
        <item name="android:layout_width">@dimen/dp_44_y</item>
        <item name="android:layout_height">@dimen/dp_22_y</item>
        <item name="android:textSize">@dimen/dp_11_x</item>
        <item name="android:textColor">@color/tv_title</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/focus_black_btn</item>
    </style>

    <style name="fz_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_22_y</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/transparent</item>
        <!--<item name="com.fanpeihua.justforfun:isBold">true</item>-->
    </style>

    <style name="tv_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_12_x</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/line_color</item>
    </style>

    <style name="main_rb">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">-16dp</item>

    </style>

    <style name="view_line">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="view_line_gray">
        <item name="android:layout_height">0.1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_line_color</item>
    </style>

    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_20_x</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/tv_title</item>
    </style>

    <style name="view_black">
        <item name="android:layout_height">@dimen/dp_4_y</item>
        <item name="android:layout_width">@dimen/dp_64_y</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="pop_animation">
        <item name="android:windowEnterAnimation">@anim/screen_right_in</item>
        <item name="android:windowExitAnimation">@anim/screen_right_out</item>
    </style>

    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/dp_20_x</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="jc_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jc_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="jc_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!--白天主题颜色-->
    <style name="AppDayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDayDark</item>
        <item name="colorAccent">@color/colorPrimaryDayAccent</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="colorTextLight">@color/colorDayTextLight</item>
        <item name="colorTextDark">@color/colorDayTextDark</item>
        <item name="colorBg">@color/colorDayBg</item>
        <item name="colorBgDark">@color/colorDayBgDark</item>

        <item name="drawableRefresh">@drawable/ic_svg_refresh_day_bg_24</item>
        <item name="drawableArrowRight">@drawable/ic_svg_arrow_right_day_bg_dark_24</item>
    </style>

    <!--夜晚主题颜色-->
    <style name="AppNightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryNightDark</item>
        <item name="colorAccent">@color/colorPrimaryNightAccent</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="colorTextLight">@color/colorNightTextDark</item>
        <item name="colorTextDark">@color/colorNightTextLight</item>
        <item name="colorBg">@color/colorNightBg</item>
        <item name="colorBgDark">@color/colorNightBgDark</item>

        <item name="drawableRefresh">@drawable/ic_svg_refresh_night_bg_24</item>
        <item name="drawableArrowRight">@drawable/ic_svg_arrow_right_night_bg_dark_24</item>
    </style>


    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="bottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/bottomDialogAnim</item>
    </style>

    <style name="bottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter
        </item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit
        </item>
    </style>

</resources>
